<div class="row">
  <div class="col-md-6">
    <%= form_for ([@post, @post.comments.build]) do |f| %>
    	<%= f.label :name %><br>
    	<%= f.text_field :name, class: "form-control" %><br>

    	<%= f.label :body %><br>
    	<%= f.text_area :body, class: "form-control" %><br>

    	<%= f.submit 'Add Comment', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>