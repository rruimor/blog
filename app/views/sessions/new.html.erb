<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Admin Login</h1>
    <%= form_for(:session, url: admin_login_path) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <br>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
      <br>

    <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>